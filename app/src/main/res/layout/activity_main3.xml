<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menrefri"
    tools:context=".Main3Activity">


    <EditText
        android:id="@+id/ingredientInput"
        android:layout_width="299dp"
        android:layout_height="64dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="35dp"
        android:ems="10"
        android:fontFamily="@font/fridaymeduim"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#FFfFFF"
        android:textSize="35dp"
        android:hint="วัตถุดิบ"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="193dp"
        android:layout_height="0dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="682dp"
        android:fontFamily="@font/fridaymeduim"
        android:text="ตู้เย็นของฉัน"
        android:textColor="#ffff"
        android:textSize="40dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/fridaymeduim"
        android:text="ชนิดวัตถุดิบที่เลือกจะถูกเก็บไว้ในที่เก็บข้อมูลของรูเล็ตสุ่มอาหาร"
        android:textColor="#FFA0A0"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="409dp"
        android:layout_height="66dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/fridaymeduim"
        android:text="เพื่อใช้สุ่มเมนูอาหารเฉพาะวัตถุดิบที่มีอยู่ในครัว"
        android:textColor="#FFA0A0"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>